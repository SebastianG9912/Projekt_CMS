@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<CMSProjectUmbraco.NewsletterDTO>
<div class="card card-newsletter">
    <h4>Sign this form</h4>
    @using (Html.BeginUmbracoForm("newsletterSubmit", "NewsletterSurface"))
    {
        <label for="Email">Please enter your e-mail:</label>
        <input type="email" asp-for="Email" />
        <br />
        <input id="newsButton" type="submit" value="Register" />
    }
</div>
