@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>News Site</title>
    <link href="~/css/style.css" rel="stylesheet">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<header style="padding:0">
    <div class="mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center justify-content-between"
        style="width:100%; margin:0; display:flex;">
        <img src="~/images/Newspaper.png" alt="logo" style="height:100px" />
        <h1 class="ml-3 text-3xl">Singular News</h1>
        <ul class="navbar header-links" style="font-size:1.4em;">
            <li><a href="/">Home</a></li>
            <li><a href="/news-page/">News</a></li>
            <li><a href="/newsletter-sign-up-page/">Sign up</a></li>
        </ul>
    </div>
</header>

<body>
    @RenderBody()
</body>

</html>
